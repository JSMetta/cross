FROM node:latest as vcross-stage

WORKDIR /app
RUN ll
COPY ../../VCross/package*.json ./
RUN npm install
COPY ../../VCross .
RUN npm run build

FROM nginx:latest as build-stage
COPY nginx.conf /etc/nginx/nginx.conf
COPY --from=vcross-stage /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]



